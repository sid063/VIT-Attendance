<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
  
    android:background="@drawable/yourdrawable6"
    android:orientation="vertical" >
        
<TextView
      android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Subject"
    android:id="@+id/bunk_sub"
   android:gravity="center"
   android:textSize="20dp"
   android:background="@drawable/yourdrawable7"
   android:textColor="#000000"
   android:paddingTop="4dp"
   android:paddingBottom="4dp"
    />
<TextView
    android:paddingTop="10dp"
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="You have attended "
    android:id="@+id/bunk_display"
    android:gravity="center"
    android:textSize="18dp"
     android:textColor="#000000"
     
    />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:paddingTop="10dp"
   android:layout_marginTop="20dp"
   
    android:orientation="horizontal" >
<Button
      android:layout_width="40dp"
    android:layout_height="40dp"
    
    android:id="@+id/add1"
    android:background="@drawable/plus"
   android:layout_toRightOf="@+id/displayattn" 
   android:layout_marginLeft="10dp"
    />
<TextView 
       android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:text="Attend "
   android:id="@+id/displayattn"
    android:textColor="#000000"
    android:textSize="18dp"
   android:layout_centerInParent="true"
    />
<Button
      android:layout_width="40dp"
    android:layout_height="40dp"
    
    android:id="@+id/subtract1"
    android:layout_marginRight="10dp"
    android:background="@drawable/minus"
    android:layout_toLeftOf="@+id/displayattn"
   
    />
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="10dp"

    >
<Button
      android:layout_width="40dp"
    android:layout_height="40dp"
    android:text=""
    android:id="@+id/add2"
    android:background="@drawable/plus"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/displaybunk"
    />
<TextView 
       android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:text=" Bunk "
    android:textColor="#000000"
   android:layout_centerInParent="true"
   android:id="@id/displaybunk"
   android:textSize="18dp"
    />
<Button
      android:layout_width="40dp"
    android:layout_height="40dp"
   
    android:id="@+id/subtract2"
    android:background="@drawable/minus"
    android:layout_marginRight="10dp"
    android:layout_toLeftOf="@+id/displaybunk"
    />
</RelativeLayout>
 
</LinearLayout>