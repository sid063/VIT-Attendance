<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     >
        <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
       
        android:id="@+id/showstatus"
        android:textColor="#000000"
        />
     <TextView 
        android:layout_height="60dp"
        android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:background="@drawable/yourdrawable"
        />
   
      <TextView
    	android:layout_width="wrap_content"
    android:layout_height="50dp"
     android:text="Displaydate"
     android:id="@+id/displaydate_mark"
     android:textColor="#ffffff"
     android:textSize="20dp"
     android:paddingTop="10dp"
     android:paddingLeft="10dp"
     android:layout_alignParentLeft="true"
     
        />
    
      <ImageButton
    	android:layout_width="wrap_content"
    android:layout_height="40dp"

     android:id="@+id/seldate_mark"
     android:paddingTop="10dp"
     android:layout_marginRight="10dp"
     android:layout_alignParentRight="true"
     android:background="@drawable/cal"
        />
      
   <ListView 
       android:id="@+id/list_markatt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seldate_mark"
    android:paddingBottom="50dp"
    android:background="#ffffff"
    android:paddingTop="10dp"
    
    ></ListView>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
   android:background="@drawable/yourdrawable"
     >
   <Button
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:text="Post"
    android:id="@+id/post_attn"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:textColor="#ffffff"
    android:background="@drawable/yourdrawable2"
    android:layout_alignParentLeft="true"/>
   <Button
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:text="Modify"
    android:id="@+id/modi_attn"
      android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:textColor="#ffffff"
  android:background="@drawable/yourdrawable2"
    android:layout_alignParentRight="true"/>
    <Button
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:text="Delete"
    android:id="@+id/del_attn"
      android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:textColor="#ffffff"
  android:background="@drawable/yourdrawable2"
    android:layout_centerInParent="true"/>
  
   
       </RelativeLayout>
   


</RelativeLayout>