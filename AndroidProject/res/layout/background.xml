<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <TextView
          android:layout_width="match_parent"
           android:layout_height="50dp"
         android:text="Mark your Attendance"
         android:textColor="#ffffff"
         android:background="@drawable/yourdrawable"
         android:id="@+id/sim"
         />
        <Button
           android:id="@+id/postattnd"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:text="Button" />
    
     <ListView
            android:id="@+id/back_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="5px"
            android:divider="#000000"
          android:layout_below="@+id/sim"
            android:layout_marginBottom="40dp"
            android:scrollbars="none"
            android:minHeight="100px"
           >
    </ListView>
   
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yourdrawable"
    android:layout_alignParentBottom="true"
   >
      <Button
           android:id="@+id/today_post"
            android:layout_width="120dp"
    android:layout_height="40dp"
   android:layout_alignParentLeft="true"
     android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
  
           android:background="@drawable/yourdrawable2"
           android:text="Post" />
      <Button
           android:id="@+id/today_cancel"
               android:layout_width="120dp"
    android:layout_height="40dp"
  
     android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
           android:background="@drawable/yourdrawable2"
           android:text="Cancel" />
    
     </RelativeLayout>
</RelativeLayout>